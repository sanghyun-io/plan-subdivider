{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/install-rules.sh\"",
            "timeout": 30,
            "statusMessage": "Installing plan structure rules..."
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"Plan Structure Plugin active. Use /subdivide to organize complex plans.\""
          }
        ]
      }
    ]
  }
}
